// 8. Write a JavaScript function that accepts a number as a parameter and checks whether it is prime or not. Go to the editor
// Note : A prime number (or a prime) is a natural number greater than 1 that has no positive divisors other than 1 and itself.
function primeNumber(INP){
  var flag = 0;
  debugger;
  if (INP > 1){
    for (let i = 2; i < INP; i++){
      if (INP % i === 0){
        flag = 1;
        break;
      }
    }  
  }
  if ( flag === 0){
    var A = INP + "is prime number." ;
    return A;
  }
  else{
    var B = INP + "is not prime number." ;
    return B;
  }
 }
 var InputNum = prompt("Enter Number :");
 var inpNum = primeNumber(InputNum);
 console.log(inpNum);
